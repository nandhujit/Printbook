<RelativeLayout android:id="@+id/search_boxes_list_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.app.printerapp.SearchFragmentList"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <SearchView
    android:id="@+id/searched_result_search_view_list"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_marginStart="13dp"
    android:layout_marginTop="21dp" />

    <EditText
        android:id="@+id/search_by_slm_EditText_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/searched_result_search_view_list"
        android:layout_alignEnd="@+id/search_by_project_EditText_list"
        android:layout_alignLeft="@+id/searched_result_search_view_list"
        android:layout_alignStart="@+id/searched_result_search_view_list"
        android:layout_alignTop="@+id/searched_result_search_view_list"
        android:layout_marginStart="37dp"
        android:ems="25"
        android:hint="SLM ID"
        android:inputType="textPersonName"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/search_by_project_EditText_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/searched_result_search_view_list"
        android:layout_marginStart="37dp"
        android:ems="25"
        android:hint="Project Number"
        android:inputType="textPersonName"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/search_by_projectacronym_EditText_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/search_by_project_EditText_list"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/search_by_project_EditText_list"
        android:layout_marginStart="37dp"
        android:ems="25"
        android:hint="Project Acronym"
        android:inputType="textPersonName"
        android:textStyle="bold" />

    <Button
        android:id="@+id/search_by_slm_button_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/search_by_projectacronym_EditText_list"
        android:layout_alignStart="@+id/search_by_projectacronym_EditText_list"
        android:layout_below="@+id/search_by_projectacronym_EditText_list"
        android:layout_marginTop="36dp"
        android:background="@color/colorPrimaryDark"
        android:ems="25"
        android:text="@android:string/search_go"
        android:textColor="@color/colorWhite" />
    <ScrollView
        android:id="@+id/scrollview_table_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3d455b"
        android:layout_below="@+id/search_by_slm_button_list"
        android:layout_marginTop="30dp"
        android:layout_marginStart="37dp">
        <HorizontalScrollView
            android:id="@+id/hscrll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/layout_table_list"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <TableLayout
                    android:id="@+id/searched_result_list_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="#FFFFFF">

                        <TextView
                            android:id="@+id/column_slmid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="110dp"
                            android:text="SLM ID"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="110dp"
                            android:text="DATE"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="110dp"
                            android:text="OPERATOR"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="110dp"
                            android:text="PROJECT Name"
                            android:textStyle="bold"/>

                    </TableRow>
                </TableLayout>
            </RelativeLayout>
        </HorizontalScrollView>
    </ScrollView>

</RelativeLayout>
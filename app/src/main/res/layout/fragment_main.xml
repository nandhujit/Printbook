<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragmentMain_LinearLayout"
    tools:context="android.app.printerapp.MainFragment">

    <LinearLayout
        android:id="@+id/homePage_LineLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal">


        <Button
            android:id="@+id/visualize_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@mipmap/ic_3d_rotation_black_48dp"
            android:paddingTop="50dp"
            android:background="@drawable/shadow"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_weight="1.0"
            android:textSize="18sp"
            android:text="Visualize your 3D model"
            tools:text="Visualize your 3D model" />

        <Button
            android:id="@+id/newPrintJob_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_library_books_black_48dp"
            android:paddingTop="50dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:background="@drawable/shadow"
            android:layout_weight="1.0"
            android:textSize="18sp"
            android:text="New Print Job"
            tools:text="New Print Job" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal">

        <Button
            android:id="@+id/createMaterial_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="50dp"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/ic_create_black_48dp"
            android:background="@drawable/shadow"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:text="Create Material"
            tools:text="Create Material" />

        <Button
            android:id="@+id/search2_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="50dp"
            android:layout_weight="1.0"
            android:textSize="18sp"
            android:drawableTop="@drawable/ic_search_black_48dp"
            android:background="@drawable/shadow"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Search" />

    </LinearLayout>

</LinearLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.app.printerapp.AboutUsFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/swereaView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50sp"
                app:srcCompat="@drawable/swereaivf_logo" />


            <ImageView
                android:id="@+id/vinnovaView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/swereaView"
                android:cropToPadding="true"
                app:srcCompat="@drawable/vinnova_logo" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Developed By"
                android:textColor="#5A8B28"
                android:textSize="20sp"
                android:layout_marginBottom="30sp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Abel Asefa (abelandk@gmail.com)"
                android:textSize="17sp"
                android:textStyle="bold|italic"
                android:layout_marginBottom="5sp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Jobaer Ahmed (ahmedjobaer2@gmail.com) "
                android:textSize="17sp"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold|italic"
                android:layout_marginBottom="5sp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_gravity="center_horizontal"
                android:text="LÃ­dia Nyman (lidia.rpo@gmail.com)"
                android:textSize="17sp"
                android:textStyle="bold|italic"
                tools:ignore="RtlHardcoded,RtlSymmetry"
                android:layout_marginBottom="5sp"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Maoyi Huang (edward.HMY@gmail.com)"
                android:textSize="17sp"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold|italic"
                android:layout_marginBottom="5sp"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Nandha Gopal(nandhujit@gmail.com)"
                android:textSize="17sp"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold|italic"
                android:layout_marginBottom="50sp"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>



